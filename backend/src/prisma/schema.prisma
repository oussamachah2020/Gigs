// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Candidate {
  candidateId  Int       @id @default(autoincrement())
  fullName     String
  email        String    @unique
  password     String
  verified     Boolean  
}


model recruiter {
  recruiterId Int    @id @default(autoincrement()) 
  fullName    String
  email       String @unique
  password    String 
  verified     Boolean  
}

model job_post {
  jobId                 Int     @id @default(autoincrement())
  job_title             String 
  company_name          String
  company_location      String
  technologies_required String
  job_description       String
  created_at            DateTime @default(now())
}